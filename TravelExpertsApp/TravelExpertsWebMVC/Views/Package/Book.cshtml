@model TravelExpertsDB.Package

@{
    ViewData["Title"] = "Book";
}

<h1 class="mt-5">Book Package</h1>

<div>
    <h4>Package Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Package Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PkgName)
        </dd>
        <dt class = "col-sm-2">
            Start Date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PkgStartDate)
        </dd>
        <dt class = "col-sm-2">
            End Date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PkgEndDate)
        </dd>
        <dt class = "col-sm-2">
            Description:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PkgDesc)
        </dd>
        <dt class = "col-sm-2">
            Price:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PkgBasePrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-light me-3">Back</a>
    <a asp-action="CreateBooking" class="btn btn-primary">Continue</a>
</div>