@model TravelExpertsDB.Customer

@{
    ViewData["Title"] = "Register";
}

<h1 class="mt-5">Register</h1>

<p>Please fill out all required fields</p>
@if (TempData["Message"] != null)
{
    <h4 class="@(TempData["IsError"] != null? "text-danger": "text-success")">
        @TempData["Message"]
    </h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" method="post">
            <h4>Login Information</h4>
            <div class="form-group mt-3">
                <label class="control-label">Email<span class="text-danger">   *required</span></label>
                <input asp-for="CustEmail" class="form-control rounded" placeholder="eg.  example@email.com"/>
                <span asp-validation-for="CustEmail" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Password<span class="text-danger">   *required</span></label>
                <input asp-for="Password" class="form-control rounded" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Confirm Password<span class="text-danger">   *required</span></label>
                <input asp-for="ConfirmPassword" class="form-control rounded" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <hr />
            <h4>Contact Information</h4>
            <div class="form-group mt-3">
                <label class="control-label">First Name<span class="text-danger">   *required</span></label>
                <input asp-for="CustFirstName" class="form-control rounded" />
                <span asp-validation-for="CustFirstName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Last Name<span class="text-danger">   *required</span></label>
                <input asp-for="CustLastName" class="form-control rounded" />
                <span asp-validation-for="CustLastName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Phone<span class="text-danger">   *required</span></label>
                <input asp-for="CustHomePhone" class="form-control rounded" placeholder="eg.  4034443333" />
                <span asp-validation-for="CustHomePhone" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Business Phone</label>
                <input asp-for="CustBusPhone" class="form-control rounded" placeholder="eg.  4034443333"/>
                <span asp-validation-for="CustBusPhone" class="text-danger"></span>
            </div>
            <hr />
            <h4>Address</h4>
            <div class="form-group mt-3">
                <label class="control-label">Street Address<span class="text-danger">   *required</span></label>
                <input asp-for="CustAddress" class="form-control rounded" />
                <span asp-validation-for="CustAddress" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">City<span class="text-danger">   *required</span></label>
                <input asp-for="CustCity" class="form-control rounded" />
                <span asp-validation-for="CustCity" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Province<span class="text-danger">   *required</span></label>
                <select name="CustProv" asp-for="CustProv" class="form-select rounded">
                    <option value="">Select</option>
                    <option value ="AB">Alberta</option>
                    <option value="BC">British Columbia</option>
                    <option value="MB">Manitoba</option>
                    <option value="NB">New Brunswick</option>
                    <option value="NL">New FoundLand and Labrador</option>
                    <option value="NT">NorthWest Territories</option>
                    <option value="NS">Nova Scotia</option>
                    <option value="NU">Nunavut</option>
                    <option value="ON">Ontario</option>
                    <option value="PE">Prince Edward Island</option>
                    <option value="QC">Quebec</option>
                    <option value="SK">Saskatchewan</option>
                    <option value="TY">Yukon</option>
                </select>
                <span asp-validation-for="CustProv" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Postal Code<span class="text-danger">   *required</span></label>
                <input asp-for="CustPostal" class="form-control rounded" placeholder="eg.  A1A 1A1"/>
                <span asp-validation-for="CustPostal" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label class="control-label">Country<span class="text-danger">   *required</span></label>
                <input asp-for="CustCountry" class="form-control rounded" />
                <span asp-validation-for="CustCountry" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="CustomerId" />

            <div class="form-group mt-4 mb-4">
                <input type="submit" value="Submit" class="btn btn-danger rounded mb-5" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

