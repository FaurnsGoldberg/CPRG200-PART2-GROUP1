@using System.Globalization
@model BookingPaymentViewModel;

@{
    ViewData["Title"] = "Order History";
}
@if (TempData["Message"] != null)
{
    <h4 class="@(TempData["IsError"] != null? "text-danger": "text-success")">
        @TempData["Message"]
    </h4>
}
<div class="infopage">
    <partial name="_AccountPartial" />
    <div id="account-info" class="container-fluid mt-5">
        <div id="account-header">
            <h1>Make Payment</h1>
        </div>
        <dl class="row" id="account-body">
            <dt class="col-sm-2">
                Package Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PkgName)
            </dd>
            <dt class="col-sm-2">
                Booking Date:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookingDate)
            </dd>
            <dt class="col-sm-2">
                Remaining Balance:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Balance)
            </dd>
            <form asp-action="ConfirmPayment" method="post">
                @Html.HiddenFor(model => model.BookingId)
                @Html.HiddenFor(model => model.Balance)
                @Html.HiddenFor(model => model.BookingDate)
                @Html.HiddenFor(model => model.PkgName)
                <div class="form-group mt-3">
                    <label class="control-label">Payment Amount</label>
                    <input asp-for="Payment" class="form-control rounded" />
                    <span asp-validation-for="Payment" class="text-danger"></span>
                </div>
                <br />
                <div>
                    <a asp-action="OrderHistory" class="btn btn-light">Back</a>
                    <input type="submit" value="Confirm Payment" class="btn btn-success rounded" />
                </div>
            </form>
        </dl>
        
    </div>
</div>
